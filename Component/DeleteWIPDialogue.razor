<DxFormLayout>
	<DxFormLayoutItem Caption="Mes Task No.:" BeginRow=true ColSpanMd="12">
		<DxTextBox Text="@mesTask.TaskNoFromMes" ReadOnly="true" />
	</DxFormLayoutItem>
	<DxFormLayoutItem Caption="Reason: " BeginRow=true ColSpanMd="12">
		<DxComboBox Data="reasonList" @bind-Value="@mesTask.FinishReason"></DxComboBox>
	</DxFormLayoutItem>
</DxFormLayout>
@code {
	[Parameter]
	public MesTaskDetail mesTask { get; set; }

	private List<string> reasonList = new List<string> { "moving1", "docking1", "handshake1", "barcodecheck1", "moving2", "docking2", "barcodecheck2", "handshake2", "moving3" };

	private string reason;

	protected override Task OnInitializedAsync()
	{
		//testData = mesTask.TaskNoFromMes.Trim().Contains("test");
		mesTask.FinishReason = reasonList[0];
		return base.OnInitializedAsync();
	}
}

<DxFormLayout>
	<DxFormLayoutItem Caption="Mes Task No.:" BeginRow=true ColSpanMd="12">
		<DxTextBox Text="@mesTask.TaskNoFromMes" ReadOnly="true" />
	</DxFormLayoutItem>
	<DxFormLayoutItem Caption="Reason: " BeginRow=true ColSpanMd="12">
		<DxComboBox Data="reasonList" @bind-Value="@mesTask.FinishReason" ReadOnly="testData"></DxComboBox>
	</DxFormLayoutItem>
</DxFormLayout>
@code {
	[Parameter]
	public MesTaskDetail mesTask { get; set; }

	private bool testData;

	private List<string> reasonList = new List<string> { "moving", "handshaking" };

	private string reason;

	protected override Task OnInitializedAsync()
	{
		testData = mesTask.TaskNoFromMes.Trim().Contains("test");
		mesTask.FinishReason = testData ? "test stop" : "moving";
		return base.OnInitializedAsync();
	}
}
